<form action="{{ path('login_check') }}" method="post" class="form-inline" >
  <div class="form-group">
    <label class="sr-only" for="username">Nazwa użytkownika</label>
    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Nazwa użytkownika">
  </div>
  <div class="form-group">
    <label class="sr-only" for="password">Hasło</label>
    <input type="password" class="form-control" name="_password" id="password" placeholder="Hasło">
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox"> Remember me
    </label>
  </div>
  <button type="submit" class="btn btn-default">Zaloguj</button>
</form>